{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src", // Mant√©m a estrutura das pastas do src dentro de dist.
    "baseUrl": "./",
    "esModuleInterop": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "prisma/seed/**/*"]
}
